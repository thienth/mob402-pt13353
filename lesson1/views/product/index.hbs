<style>
    .bg-aqua{
        min-height: 300px;
        background: aqua;
    }
    .bg-green{
        min-height: 300px;
        background: green;
    }
</style>

<div class="container">
    <div class="row">
        {{!-- <div class="col-6 bg-aqua"></div> --}}
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Category name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Detail</th>
                        <th scope="col">
                            <a href="/products/add" class="btn btn-sm btn-success">Add</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{this.name}}</th>                    
                        <td class="text-center">
                            <img src="{{this.image}}" width="70" class="img-thumbnail">
                        </td>
                        <td>{{this.cate_id.name}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.detail}}</td>
                        <td class="text-center">
                            <a href="/products/edit/{{this._id}}" class="btn btn-info btn-sm">Edit</a>
                            <a href="/products/remove/{{this._id}}" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
        </div>

    </div>
</div>